<%@goals.each do |goal|%>
  <strong>Goal Description:</strong> <%=link_to goal.description, goal_path(goal)%></br>
  <strong>Achieved?:</strong> <%=goal.achieved_status%></br>
  <strong>Date achieved:</strong> <%if goal.date_achieved != nil%>
    <%=goal.date_achieved%></br>
    <%else%>
        <%="Not yet"%></br>
      <%end%>
      <%=link_to "Add a workout to this goal", new_workout_path%></br>
      <%=link_to "Edit this goal", edit_goal_path(goal)%></br></br>
    <%end%>
