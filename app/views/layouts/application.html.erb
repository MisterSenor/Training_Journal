<!DOCTYPE html>
<html>
  <head>
    <title>TrainingJournal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>


    <%if current_user%>
      <%= link_to "Logout", logout_path, :method => :delete%>
    <%end%>

    <%if current_user%>
      <%=link_to "My Goals", goals_path%>
      <%= link_to "Add a Goal", new_goal_path%>
      <%= link_to "Add a Workout", new_workout_path%>
      <%= link_to "All Workouts", workouts_path%>
      <%= link_to "Add an Exercise", new_exercise_path%>
      <%= link_to "My Exercises", exercises_path%></br></br>
    <%end%>

    <%= yield %>


  </body>
</html>
